@* Remova a linha "@model AtividadeModel" *@

@{
    ViewData["Title"] = "Converter Número";
}

<h2>Converter Número</h2>

<form asp-controller="Numero" asp-action="Index" method="post">
    <label for="numeroInput">Digite um número (0-9999):</label>
    <input type="number" id="numeroInput" name="numeroInput" min="0" max="9999" required>
    <button type="submit">Converter</button>
</form>

@if (ViewBag.NumeroPorExtenso != null)
{
        <p>Resultado: @ViewBag.NumeroPorExtenso</p>
}