@model Model.Customer

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Cadastro de consumidor</h1>
    <div class="container">
        <form id="formCustomer" method="post" asp-action="Create" asp-controller="Customer">
        <div class="row" style="accent-color:initial">
            <div class="form-group">
                <label asp-for="@Model.Name">Nome:</label>
                <input type="text" class="form-control" asp-for="@Model.Name" />
            </div>
        </div>
        <button id="btnCustomer" type="submit" class="btn btn-primary" value="Cadastrar">Cadastrar</button>
        </form>
    </div>
</div>
