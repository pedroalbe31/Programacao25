@model Model.Product

@{
    ViewData["Title"] = "Cadastrar Produto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-box-seam"></i> Cadastrar Produto
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="ProductName" class="form-label">Nome do Produto</label>
                            <input asp-for="ProductName" class="form-control" placeholder="Ex: Notebook Gamer" required />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Descrição</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Ex: 16GB RAM, SSD 512GB" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CurrentPrice" class="form-label">Preço (R$)</label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input asp-for="CurrentPrice" type="number" step="0.01" class="form-control" placeholder="Ex: 4999.99" required />
                            </div>
                            <span asp-validation-for="CurrentPrice" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Cadastrar
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

