@model Modelo.Product

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Cadastro de Produto</h1>

    <div class="container">

        <form id="formProduct" method="post" asp-action="Create" asp-controller="Product">

            <div class="row">
                <div class="form-group">
                    <label asp-for="@Model.ProductName">Nome:</label>
                    <input type="text" class="form-control" asp-for="@Model.ProductName" />
                </div>    
                <div class="form-group">
                    <label asp-for="@Model.Description">Descrição:</label>
                    <input type="text" class="form-control" asp-for="@Model.Description" />
                </div>
            </div>

            <button id="btnProduct" type="submit" value="Cadastrar" class="btn btn-primary">
                Cadastrar
            </button>

        </form>

    </div>
</div>
