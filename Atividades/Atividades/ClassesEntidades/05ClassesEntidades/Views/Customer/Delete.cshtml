@model Modelo.Customer

<div class="container">
    <div class="row">
        <div class="col-6">
            Nome: 
        </div>
        <div class="col-6">
            @Model.Name
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            Nome: 
        </div>
        <div class="col-6">
            @Model.Id
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <a class="btn btn-secondary" asp-action="Index" 
            asp-controller="Customer">
            Voltar
            </a>
        </div>
    </div>
</div>

<div class="row">
    <form 
    asp-action="ConfirmDelete" 
    asp-controller="Customer" 
    method="post">
        <input type="hidden" name="id" value="@Model.Id"/>
        <button type="submit" class="btn btn-danger">Excluir</button>
    </form>
</div>