@model List<Modelo.OrderItem>

<a asp-action="Create" asp-controller="Order" class="btn btn-light">
	Novo Order
</a>

@if (Model.Count > 0)
{
	<table class="table table-striped table-bordered table-hover">
		<thead class="table-dark">
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Nome</th>
			</tr>
		</thead>
		<tbody>
			@foreach (Modelo.OrderItem order in Model)
			{
				<tr>
					<td>@order.Id</td>
					<td>@order.Name</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div>
		Não existem registros de Ordem
	</div>
}

<a asp-action="ExportDelimitatedFile"
   asp-controller="OrderItem"
   class="btn btn-light">
	Exportar Dados
</a>